{
  "sources": [
    {
      "name": "НИИ КМ",
      "root_url": "https://www.niikm.ru/products/",
      "product_detection": {
        "or": [
          {
            "condition": {
              "and": [
                {
                  "xpath": "//p[contains(text(), 'Физико-химические свойства')]"
                },
                {
                  "xpath": "//div[contains(@class, 'product-description__wrap')]"
                }
              ]
            },
            "type": "gas",
            "extract": {
              "xpath": "//div[contains(@class, 'product-description__wrap')]"
            }
          }
        ]
      }
    },
    {
      "name": "РедМетСплав",
      "root_url": "https://redmetsplav.ru/store/",
      "product_detection": {
        "or": [
          {
            "condition": {
              "xpath": "//td[contains(text(), 'Сортамент')]"
            },
            "type": "metal",
            "extract": {
              "xpath": "//div[contains(@class, 'uss_shop_content2')]"
            }
          },
          {
            "condition": {
              "xpath": "//th[contains(text(), 'Форма частиц')]"
            },
            "type": "powder",
            "extract": {
              "xpath": "//div[contains(@class, 'uss_shop_detail') and contains(@class, 'order_one')]"
            }
          },
          {
            "condition": {
              "xpath": "//h1[contains(text(), 'Проволока')]"
            },
            "type": "wire",
            "extract": {
              "xpath": "//div[contains(@class, 'uss_shop_detail') and contains(@class, 'order_one')]"
            }
          }
        ]
      }
    },
    {
      "name": "Московский Газоперерабатывающий Завод",
      "root_url": "https://mgpz.ru/catalog/monogazy/",
      "product_detection": {
        "or": [
          {
            "condition": {
              "and": [
                {
                  "xpath": "//h2[contains(text(), 'Характеристики')]"
                },
                {
                  "xpath": "//span[contains(text(), 'Чистота:')]"
                }
              ]
            },
            "type": "gas",
            "extract": {
              "xpath": "//div[contains(@class, 'page-content')]"
            }
          }
        ]
      }
    }
  ]
}